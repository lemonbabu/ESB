<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.view.fragment.PayMethodFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:screenOrientation="portrait"
        tools:context=".ui.AddressConfirmation">

        <include
            android:id="@+id/bookInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/card_book_cover_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--
        <include
            android:id="@+id/include2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/card_book_details_specifications"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookInfo" />

        -->
        <include
            android:id="@+id/payDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/card_payment_method_information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>