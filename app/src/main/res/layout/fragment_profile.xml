<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:screenOrientation="portrait"
    tools:context=".ui.main.view.fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_rectangle_light_round"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pnlProfileImage"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/demo_user"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUserName"
            android:layout_marginTop="5dp"
            android:text="@string/sample_phone_number"
            android:textAlignment="center"
            android:textColor="@color/black_light"
            android:textSize="@dimen/text15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUserPhone"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:drawablePadding="15dp"
            android:text="@string/sample_email_address"
            android:textSize="@dimen/text15"
            app:drawableStartCompat="@drawable/ic_material_mail" />


        <TextView
            android:id="@+id/txtChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/txtUserEmail"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:paddingTop="5dp"
            android:drawablePadding="15dp"
            android:text="@string/change_password"
            android:textSize="@dimen/text15"
            app:drawableStartCompat="@drawable/ic_material_lock" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/txtUserEmail"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_button_shape_corner_round"
                android:drawableStart="@drawable/ic_logout"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="@string/logout"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text25"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_toEndOf="@+id/btnLogOut"
                android:background="@drawable/bg_white_round"
                android:text="@string/edit_profile"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                android:textSize="@dimen/text20"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pnlProfileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_circle_white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="291dp"
            android:src="@drawable/img_demo_user" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>