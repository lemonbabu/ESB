<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="69dp">

    <LinearLayout
        android:id="@+id/titleBarHeading"
        android:visibility="invisible"
        android:layout_width="300dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/logo_esb"
            android:contentDescription="@string/app_bar_home_button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/engineering"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="@dimen/text25"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/smart_book"
                android:textStyle="bold"
                android:textSize="@dimen/text15"/>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnBackMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:contentDescription="@string/app_bar_home_button"
        android:src="@drawable/ic_arrow_round_back" />

    <ImageButton
        android:id="@+id/btnNotificationsMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:contentDescription="@string/app_bar_home_button"
        android:src="@drawable/ic_notifications" />


</RelativeLayout>