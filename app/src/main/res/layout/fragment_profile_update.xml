<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:screenOrientation="portrait"
    tools:context=".ui.main.view.fragment.ProfileUpdateFragment">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_light_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pnlProfileImage"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:drawablePadding="10dp"
            android:hint="@string/demo_user"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textSize="@dimen/text15"
            app:drawableStartCompat="@drawable/ic_user_profile"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:layout_below="@+id/txtUserName"
            android:id="@+id/txtUserEmail"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:hint="@string/sample_email_address"
            android:drawablePadding="10dp"
            android:textSize="@dimen/text15"
            app:drawableStartCompat="@drawable/ic_material_mail"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtUserEmail"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_button_shape_corner_round"
            android:text="@string/update"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text20"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pnlProfileImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_circle_white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="291dp"
            android:src="@drawable/img_demo_user" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnUploadAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/profileAvatar"
            android:layout_alignBottom="@+id/profileAvatar"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_baseline_edit_profile_24" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>