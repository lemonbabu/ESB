<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:screenOrientation="portrait"
    tools:context=".ui.main.view.fragment.UpdatePasswordFragment">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_light_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pnlProfileImage"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="@string/password_hints"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textSize="@dimen/text15"
            app:drawableStartCompat="@drawable/ic_material_lock" />


        <EditText
            android:layout_below="@+id/txtPassword"
            android:id="@+id/txtNewPassword"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:hint="@string/new_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textSize="@dimen/text15"
            app:drawableStartCompat="@drawable/ic_material_lock" />


        <EditText
            android:layout_below="@+id/txtNewPassword"
            android:id="@+id/txtConPassword"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/confirm_password"
            android:drawablePadding="10dp"
            android:textSize="@dimen/text15"
            app:drawableStartCompat="@drawable/ic_material_lock"
            android:inputType="textPassword"
            android:importantForAutofill="no" />

        <Button
            android:layout_below="@+id/txtConPassword"
            android:id="@+id/btnUpdate"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_button_shape_corner_round"
            android:text="@string/update"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text25"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pnlProfileImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_circle_white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="291dp"
            android:src="@drawable/img_demo_user" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>